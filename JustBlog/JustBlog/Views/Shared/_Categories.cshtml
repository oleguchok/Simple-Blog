@using JustBlog.Core.Objects
@using JustBlog.Helpers
@model IList<Category>

<div id="sidebar">
    <h3>Categories</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li>@Html.CategoryLink(category)</li>
            }
        </ul>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>
